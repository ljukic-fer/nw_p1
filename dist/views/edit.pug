extends layout

block variables
  - var date = comm.date

block content
  h2.text-center Edit comment

  .row
    .offset-sm-2.col-sm-8
      form(method="post")
        .form-group
          label(for="body") Post Body
          textarea.form-control#body(name="body", rows="6", required)= comm.body
        button.btn.btn-primary.submit-btn(type="submit") Update

  .row
    .offset-sm-2.col-sm-8
      .body !{comm.body}
      p.author Written by #{comm.authorName}